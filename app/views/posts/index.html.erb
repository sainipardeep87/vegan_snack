
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<link rel="icon" type="image/png" href="../assets/new-design/fav-icon.png" />
<title>Vegan Snack Pack</title>

</head>

<body>

<section class="blog-bg">
<div class="inner-content-bg">
  <div class="heading-main-bg">Chefâ€™s Blog</div>
  <div class="sub-heading-main-bg">ut suscipit enim. Integer lacinia purus </div>
  <div class="read-main-bg"><a href="#">Read Post</a></div>
 </div> 
</section>

<section class="blog-content">
	<div class="main-heading-content">
    
	  <div class="recent-posts">Recent Posts</div>
	</div>
	 <% @recent_posts.each do |post| %>	
	<div class="first-blog">
	   <div class="heading-first-blog"><%= post.title%></div>
	   <div class="outer-det-fst-blog">
	   <div class="det-fst-blog">
	      <div class="date-fst-blog"> <%= post.created_at.strftime("%B %e, %Y").upcase %> </div>
		  <div class="com-fst-blog"><%= post.comments.count%></div>
		  <div class="like-fst-blog">9</div>
	   </div>
	   </div>
	   
	   <div class="img-para-blog">
	     <div class="left-img-para">
		   <%= post.post_image.present? ? (link_to image_tag(post.post_image.url(:recent), :alt => "recipe image",  class: 'feature-image' ), post) : (link_to (image_tag "blog/blog_default.png", class: 'feature-image'), post) %>
		   <!-- <img src="../assets/new-design/blog-img1.jpg"> -->
		 </div> 
         <div class="right-img-para">
		   <p> <%=  Nokogiri::HTML(post.content).text.truncate(150) %> </p>
           
		   <div class="read-more"><a href="#">Read More</a></div>
		    
		 </div>  
		 		 
         <div class="clr"></div>		 
	   
	   </div>
	</div>
	
	 <div class="clr"></div>	
	 
	 
	 <div class="gray-line">&nbsp;</div>
	 
	 <%end%>
	  
	 	
	 <div class="clr"></div>		 
	 
	 <div class="gray-line">&nbsp;</div>
	 
	 <div class="pagination-main">
	    
		  <%= will_paginate(@recent_posts) %>
		
	 </div>
  

</section>

<footer>
  <%= render 'statics/application_footer'%>
</footer> 


