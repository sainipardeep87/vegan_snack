<% unless  HIDE_SHARE_BLOCK %>

    <div class="share-block">
      <div id="social_share">

        <span> SHARE ON: </span>
          <%= link_to 'FACEBOOK', get_social_sharing_links('facebook'), :target => "_blank" %> |
          <%= link_to 'TWITTER', get_social_sharing_links('twitter'), target: "_blank" %> |
          <%= link_to 'PINTEREST', get_social_sharing_links('pinterest'),target: "_blank" %> |
          <%= link_to 'GOOGLE+', get_social_sharing_links('google_plus'),target: "_blank" %>

      </div>

    </div>
<% end %>
