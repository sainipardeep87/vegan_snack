<div class='modal-header'>
  
  <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>
    &times;
  </button>
  
  <h4 class='modal-title' id='myModalLabel'>Cancel Subscription</h4>

</div>


<div class='modal-body'>

  <% if @my_subscriptions.present? %>

    <% @my_subscriptions.each_with_index do |my_subscription, index| %>

      <%= link_to "#{my_subscription.subscription.try(:subscription_type)} (#{my_subscription.updated_at.strftime("%d %b, %Y")})", cancel_my_subscription_path(my_subscription.id) , :class => 'btn btn-primary btn-link' %>
      
      <!-- "/my_subscriptions/#{my_subscription.id}/cancel" -->
    <%end%>
  <% else %>
    <div class="align-left">
    Sorry, your subscription is under process. Try after your order is delivered.
    </div>
  <% end %>
</div>

<div class='modal-footer'>
  <% if @my_subscriptions.present? %>
    <div class='align-left'>Please select a subscription to cancel.</div>

  <% end %>
</div>