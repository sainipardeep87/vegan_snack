
<%= form_for @address, :url => main_app.create_acc_address_users_path, :remote => true  do |f| %>

    <div id="address_profile_update"  class="modal-body no-border min-padding">

      <div class="form-group" id="address_selection">
        <label> Select Address </label>
        <%= f.select  :address_type, ["Billing Address", "Shipping Address"] %>
      </div>

      <div class="form-group small-group">
        <label>First Name</label>
        <%= f.text_field  :firstname, :id => "add_fname", :class => "form-control" %>
        <label for="add_fname", class="address-err"></label>
      </div>

      <div class="form-group small-group pull-right">
        <label>Last Name</label>
        <%= f.text_field  :lastname, :id => 'add_lname', :class => "form-control" %>
        <label for="add_lname",  class="address-err"></label>
      </div>

      <div class="form-group">
        <label>Address 1 </label>
        <%= f.text_field  :address1, :id => "add_add1", :class => "form-control" %>
        <label for="add_address1", class="address-err"></label>
      </div>

      <div class="form-group">
        <label>Address 2</label>
        <%= f.text_field  :address2, :id => "add_add2", :class => "form-control" %>
        <label for="add_address2", class="address-err"></label>
      </div>


      <div class="form-group">
        <label>City</label>
        <%= f.text_field  :city, :id => "add_city", :class => "form-control" %>
        <label for="add_city" class="address-err"></label>
      </div>


      <div class="form-group small-group">
        <label>State</label>
        <%= f.text_field  :state_name, :id => "add_state", :class => "form-control" %>
        <label for="add_state" class="address-err"></label>
      </div>

      <div class="form-group small-group">
        <label>Zipcode</label>
        <%= f.text_field  :zipcode, :id => "add_zip", :class => "form-control" %>
        <label for= "add_zipcode" class="address-err"></label>
      </div>

    </div>

    <div class="modal-footer">
      <%= submit_tag "Cancel", :type => 'button', :class => "btn btn-default", "data-dismiss" => "modal" %>
      <%= f.hidden_field :user_id, {:value => spree_current_user.id } %>

      <%= f.submit  'Create Address',  :remote => true, :id => 'address_update_button'  %>
    </div>

<% end %>