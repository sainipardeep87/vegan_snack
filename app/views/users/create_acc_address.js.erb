App.unBlockUI($('#move_add_up'));

<% if @address.valid? %>

$("#address_profile_update div.form-group label.address-err").empty();
/* Clearing the the error messages appended below the address Edit Form */
$(".update-notification").html("Address Created successfully.");
$(".update-notification").show();

setTimeout(function() {
    $("span#<%= @address.id %>").html("<%= escape_javascript(render 'users/dash_address_book', :locals => {@address => @address}) %>");
    $("#address_modal").modal("toggle");
    location.reload();
},1500);


<% else %>

<% @address.remove_errormessages_added_by_spree %>

$("label[for='add_fname']").html("<%= @address.errors.messages[:firstname][0] if @address.errors.to_hash.has_key?(:firstname)%>");
$("label[for='add_lname']").html("<%= @address.errors.messages[:lastname][0] if @address.errors.to_hash.has_key?(:lastname)%>");
$("label[for='add_address1']").html("<%= @address.errors.messages[:address1][0] if @address.errors.to_hash.has_key?(:address1)%>");
$("label[for='add_address2']").html("<%= @address.errors.messages[:address2][0] if @address.errors.to_hash.has_key?(:address2)%>");

$("label[for='add_city']").html("<%= @address.errors.messages[:city][0] if @address.errors.to_hash.has_key?(:city)%>");
$("label[for='add_state']").html("<%= @address.errors.messages[:state_name][0] if @address.errors.to_hash.has_key?(:state_name)%>");
$("label[for='add_zipcode']").html("<%= @address.errors.messages[:zipcode][0] if @address.errors.to_hash.has_key?(:zipcode) %>");

<% end %>