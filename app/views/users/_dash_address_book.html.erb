<% address = @address if @address.present?  %>


   <span id=<%= address.id %>>
     <div id="add_data">

          <div class = "change-font-size">
            <b>
                <span><%= address.firstname %> </span>
                <span><%= address.lastname %> </span>
            </b>
          </div>

          <div class = "change-font-size">
            <span><%= address.address1 %> </span>
            <span><%= address.address2 %> </span>
          </div>

          <div class = "change-font-size">
            <span><%= address.city %> </span>
            <span><%= address.state_name %></span>
          </div>

          <div class = "change-font-size">
            <span><%= address.zipcode %> </span>
          </div>

           <div class="edit-add-acc">
             <% if address.address_type == 'Shipping Address' %>
                 <div class="active-add"> > shipping </div>
             <% else %>
                 <div class="inactive-add"> > shipping </div>
             <% end %>


             <% if address.address_type == 'Billing Address' %>
                 <div class="active-add"> > billing </div>
             <% else %>
                 <div class="inactive-add"> > billing </div>
             <% end %>

             <div> <%= link_to  '> edit', main_app.edit_address_users_path(id: address.id), remote: true, :class => 'turn-blue' %> </div>
             <div> <%= link_to '> remove', nil, :id => address.id, :class => 'confirm-address-delete turn-blue' %> </div>

           </div>

     </div>
   </span>