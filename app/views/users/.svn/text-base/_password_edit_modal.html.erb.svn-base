
<div class="modal fade" id="password_modal" data-backdrop = "static" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="modal-title">Password update </div>
        <div class="update-notification"> Password updated successfully! </div>
      </div>

      <div class="personal-info-refresh">

        <%= form_for(spree_current_user, :url => main_app.update_password_users_path, :method => :post,
                     :remote => true,:html => { :id => 'password_update_form'}) do |f| %>

            <div class="modal-body no-border" id="personal_profile_update">
              <%= f.hidden_field  :id, {:value => spree_current_user.id} %>

              <div class="form-group">
                <label>Current Password</label>
                <%= f.password_field  :current_password, :class => "form-control"  %>
               <label for="user_current_password" class="error"  />
              </div>

              <div class="form-group">
                <label>New Password</label>
                <%= f.password_field  :password, :class => "form-control"  %>
                <label for="user_password" class="error"  />
              </div>

              <div class="form-group">
                <label>Confirm Password</label>
                <%= f.password_field  :password_confirmation, :class => "form-control"  %>
                <label for="user_password_confirmation" class="error" />
              </div>


            </div>
            <div class="modal-footer" id="password_footer">
              <%= submit_tag "Cancel", :type => 'button', :class => "btn btn-default", "data-dismiss" => "modal" %>
              <%= f.submit  'Update Password', :id => 'password_update' %>
            </div>

        <% end %>

      </div>
    </div>
  </div>
</div>