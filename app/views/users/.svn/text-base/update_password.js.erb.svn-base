/* Clearing the error labels appended below the fields during validation. */
$("#password_update_form div label.error").empty();


<% unless @valid_login %> /* Invalid current password entered */
     $("label[for='user_current_password']").html("Invalid current password entered.");
     $("#password_update_form div label.error").css("display", "block");
<% end %>


<% if @password_updated %>
    show_password_updated_notification();
<% else %>

    <% if @user.errors.to_hash.has_key?(:password_confirmation) %>
        $("label[for='user_password_confirmation']").html("Does not match  Password.");
    <% end %>

<% end %>