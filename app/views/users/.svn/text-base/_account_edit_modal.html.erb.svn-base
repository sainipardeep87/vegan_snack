
<div class="modal fade" id="myModal" data-backdrop = "static" >
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="modal-title">Personal details </div>
        <div class="update-notification" id="acc_update"> Details updated successfully! </div>
      </div>

      <div class="personal-info-refresh" id="j_profile_account_update">
        <%= form_for(spree_current_user, :url => main_app.update_account_users_path, :method => :post, :remote => true, html: {id: 'personal_profile_update'}, :class => 'p_info error-section') do |f| %>

            <div class="modal-body no-border" id="personal_profile_update" class="error-section">

              <div class="form-group">
                <label>First Name</label>
                <%= f.text_field  :first_name,  :id => "acc_fname", :class => "form-control" %>
                <label for="acc_fname" class = "address-err"> </label>
              </div>

              <div class="form-group">
                <label>Last Name</label>
                <%= f.text_field  :last_name, :id => "acc_lname", :class => "form-control" %>
                <label for="acc_lname" class =  "address-err"> </label>
               </div>

              <div class="form-group">
                <label>Email Id:</label>
                <%= f.email_field :email, :id => "acc_phone", :class => "form-control", :readonly => true %>
              </div>

              <div class="modal-footer">
                <%= submit_tag "Cancel", type: 'button', class: "btn btn-default", "data-dismiss" => "modal" %>
                <%= f.submit  'Update Account', id: 'account_sub_btn' %>
              </div>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>