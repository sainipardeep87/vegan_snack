<% if @address.present? %>

    /* rendering address edit form dynamically */
    $("#address_content").html("<%= escape_javascript(render 'users/form') %>");

    /* changing the edit modal header depending on the type of address */
    $("#edit_add_type").html("<%= @address.address_type %>");
    
    /* hide the address updated successfully notification from top header */
    $(".update-notification").hide();
    
    /* display the address edit modal window */
    $("#address_modal").modal("show");
    
    /* Added client side validation on the edit address modal window */
    validate_account_address("#address_content form");
    
<% end %>