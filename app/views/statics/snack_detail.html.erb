
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<link rel="icon" type="image/png" href="../assets/new-design/fav-icon.png" />
<title>Vegan Snack Pack</title>

</head>

<body>
<section class="main-ind-snk">
<%@snacks.each_with_index do |snack,i|%>
	<% if i != 2 && i != 5%>
	  	<div class="img1-snk-ind"><%= image_tag(snack.images.first.attachment.url(:large),:id=>snack.id) %>
	    	<div class="hover-snk">
		   		<div class="heading-hover-snk"><%= snack.name%></div>
		   		<!-- <div class="subheading-hover-snk"><%= truncate(snack.description,length: 120)%></div> -->
		   		<div class="view-det-snk"><%= link_to "View Details", {:controller => "statics", :action => "individual_product", :snack => snack.id }%></div> 
		   	</div>	 
	    </div>
	<% else %>
	  	<div class="img1-snk-ind rt-mrg"><%= image_tag(snack.images.first.attachment.url(:large))%>
	    	<div class="hover-snk">
		   		<div class="heading-hover-snk"><%= snack.name%></div>
		   		<!-- <div class="subheading-hover-snk"><%= truncate(snack.description,length: 120)%></div> -->
		   		<div class="view-det-snk"><%= link_to "View Details", {:controller => "statics", :action => "individual_product", :snack => snack.id }%></div> 
		   	</div>	 
	  	</div>
  	<%end%>
<% end %>
   
</section>

<footer>
<%=render 'statics/application_footer' %>
  
</footer> 


