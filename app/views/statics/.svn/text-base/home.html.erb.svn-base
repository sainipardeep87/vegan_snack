<div class="container order-today-section third-win">

  <div class="row order-title">Order today!</div>

    <div class="row">

      <div class="col-md-5 col-sm-5 col-xs-5 col-move-right billing-section">
        <div class="bill-title">Billing Address</div>

        <%= form_for @user,  url:  spree.registration_path(@user),  id: 'user_new'   do |f| %>

            <div>
            <% @user.errors.full_messages.each do |msg| %>
            <% end %>
            </div>

            <%= f.fields_for :address  do |builder| %>
          <div class="v-signup-div">
          <span><%= builder.text_field :firstname, :placeholder => "First Name *", name: 'firstname' %> </span>
           <span><%= builder.text_field :lastname, :placeholder => "Last Name *", name: 'lastname' %></span>
          </div>

          <div class="v-signup-div">
                    <span> <%= f.text_field :email, :placeholder => "Email *", name: 'email' %>
                            <% if f.object.errors.count != 0 %>
                                <label class="error">  <%=  "Email ID "+  f.object.errors.messages[:email][0]  %>  </label>
                              <% end %>
                      </span>

            <span> <%= builder.text_field :phone, :placeholder => "Phone *", name: 'phone' %></span>
          </div>

          <div class="v-signup-div v-wide-div">
            <span> <%= builder.text_field :company, placeholder: 'Company', name: 'company' %> </span>
          </div>

          <div class="v-wide-div v-signup-div">
            <span><%= builder.text_field :address1, placeholder: 'Address Line 1 *', name: 'address1' %></span>
          </div>


          <div class="v-wide-div v-signup-div">
            <span><%= builder.text_field :address2, placeholder: 'Address Line 2(Apartment #, Suite #, etc.)', name: 'address2' %></span>
          </div>

          <div class="v-wide-div v-signup-div">
            <span> <%= builder.text_field :city, placeholder: 'City *', name: 'city' %></span>
          </div>

          <div class="v-signup-div">
            <span><%= builder.text_field :state, :placeholder => "State *", name:'state' %></span>
            <span><%= builder.text_field :zipcode, :placeholder => "Zip *", name: 'zipcode' %></span>
          </div>

          <div class="v-signup-div">
            <span> <%= f.password_field :password, :placeholder => "Create Password *", name: 'password' %></span>
            <span> <%= f.password_field :password_confirmation, :placeholder => "Confirm Password *", name: 'password_confirmation' %></span>
          </div>

          <div class="coupon-title">Coupon </div>

          <div class="v-wide-div v-signup-div">
            <span><input type="text",  placeholder="Discount Code" /></span>
          </div>

             <% end %>



      </div>

      <div class="col-md-5 col-sm-5 col-xs-5 order-summary-column">
        <div class="summary-title">Order Summary</div>

        <div class="order-summary-div">

          <div class="summary-line">
              <%= image_tag('/assets/home/vegan-final_07.jpg', class: 'img-thumbnail pull-left sum-image') %>
            <span class="img-thumbnail pull-right offer-bubble sum-selection-active"> </span>
            <h4 class="offer-name"> Smart Snacker</h4>
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                Aliquam dignissimos distinctio eligendinatus sapiente!
              </p>
            </div>

          <div class="summary-line">
            <%= image_tag('/assets/home/vegan-final_10.jpg', class: 'img-thumbnail pull-left sum-image') %>
            <span class="img-thumbnail pull-right offer-bubble sum-selection-inactive"> </span>
            <h4 class="offer-name"> Smart Snacker</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.
              Aliquam dignissimos distinctio eligendinatus sapiente!
            </p>
          </div>


          <div class="summary-line">
            <%= image_tag('/assets/home/vegan-final_16.jpg', class: 'img-thumbnail pull-left sum-image') %>
            <span class="img-thumbnail pull-right offer-bubble sum-selection-inactive"> </span>
            <h4 class="offer-name"> Smart Snacker</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.
              Aliquam dignissimos distinctio eligendinatus sapiente!
            </p>
          </div>
          <div class="submission">

          <%= image_submit_tag('/assets/home/vegan-final_21.png', class: 'place-my-order', id: 'user_sign_up') %>
        <% end %>
          <%= image_tag('/assets/home/vegan-final_23.png') %>
          </div>

        </div>

        <div class="cleardiv"></div>

        </div>
      </div>

    </div> <!-- End of the row -->



</div> <!-- End of the order today container -->

