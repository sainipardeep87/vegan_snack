
<div class="whats-box-snacks" >

    <% @snacks.each do |snack| %>
    <div class="ind-item-section static-snacks-individual-snack">

      <span id="image-span">
        <%#= product_image(snack, :itemprop => "large", :size => "100X100", :class => 'img-thumbnail layout-image') %>
        <%= image_tag(snack.images.first.attachment.url(:large), class: 'img-thumbnail layout-image') %>
        
      </span>
      
      <div class="ind-item-name"><%= snack.name  %>  </div>
      <div class="ind-item-desc"> <%#=truncate (snack.description),  length:  40 %> </div>
      <div class="hidden-item-desc"> <%= snack.description  %></div>

      <div class = "hidden-item-nutrifact-image"><%= image_tag snack.nutritional_fact_image.url %></div>
      <div class = "hidden-ingredients"><%= raw snack.ingredients %></div>

      <div class='detail-vegan' style='display:none !important'>
       <div class='snack-d'> click here for details</div>
      </div>

    </div>

    <% end %>
   
</div>