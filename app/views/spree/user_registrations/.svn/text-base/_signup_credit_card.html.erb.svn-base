
<div class="modal fade" id="sign_credit_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" id="subscription_show_modal" >

    <div class="modal-content full-height" id="sgn_cc">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div id="credit_card_infos">Enter Credit Card Info</div>
      </div>

      <div class="modal-body">

        <div class="get-credit-card">
          <label>Enter Payment Info:</label>
          <%= form_tag spree.registration_path, method: :post,  id: 'cc_form', remote: true do %>

              <div>
                <%= label_tag :name, 'Cardholder name' %>
                <%= text_field_tag :name %>
              </div>

              <div>
                <%= label_tag :card_no, 'Credit Card No.' %>
                <%= text_field_tag :card_no  %>
              </div>

              <div>
                <%= label_tag :month, 'Month' %>
                <%= text_field_tag :month  %>
              </div>

              <div>
                <%= label_tag :year, 'Year' %>
                <%= text_field_tag :year %>
              </div>

              <%= submit_tag "Save Card", class: "btn btn-large btn-primary", remote: true %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>