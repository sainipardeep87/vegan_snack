<body class="main-bg-bmem">

	<section class="main-bmem">
		<div class="inner-sec-bmem">
			<div class="logo-bmem">
				<a href="index.html"><img src="../assets/new-design/logo.png"></a>
			</div>
			<div class="outer-top-num">
				<div class="top-num-bmem">
					<div class="number-green">
						<span>1</span>
					</div>
					<div class="number-white">
						<span>2</span>
					</div>
					<div class="number-white2">
