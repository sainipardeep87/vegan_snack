
<span class="bill-title <%= "hide-until-email" if is_ordinary_user?(@user.facebook_token) %>" > Where Should We Ship Your Snacks? </span>

<script type="text/javascript">

	$(window).bind("load", function() {

<% if @user.email.present? %>
	$("#vegan_user_signup").ScrollTo({
		duration : 2000
	});

<% end %><% if @not_yet_fb_signed_up.present? %>
	console.log("You are not yet registered buddy!");
	toggle_the_signin_header();
	$(".welcome-message").html("<div> You do not have an account with us.</div> <div> Please get started <span id='go_signup'> here. </span> </div>");
	$(".welcome-message").addClass('no-account'); 
<% end %><% if @registered_email.present? %>

show_user_already_registered_notification("<%= @registered_email %>
	");

<% end %>
	});

</script>
<div class="inner-sec-bmem">
	<div class="logo-bmem">
		<a href="/"><img src="../assets/new-design/logo.png"></a>
	</div>
	
	<%if params[:location] %>
	<div class="outer-top-num">
	 <div class="top-num-bmem_step_4">
	    <ul>
	    <li class="list "><span>1</span></li>
		<li class="list1 active"><span>2</span></li>
		<li class="list2"><span>3</span></li>
		<li class="list4"><span>4</span></li>
	   </ul>
	 </div>
	 </div>
	<%else%>
	<div class="outer-top-num-3-step">
		<div class="top-num-bmem">
		<ul>
	    	<li class="list active"><span>1</span></li>
			<li class="list1 "><span>2</span></li>
			<li class="list2"><span>3</span></li>
			
	   </ul>
		</div>
		</div>
		<%end%>
		<div class="outer-top-num-3-step">
		
	</div>
	<div class="heading-bmem-3-step">
			Become a member
		</div>
	<div class="main-content-sec" style="display:block;">
		<div class="left-bmem">
			<div class="heading-left-bmem">
				<%= @package%>
			</div>
			<div class="image-left-bmem"><img src=<%=@image%>>
			</div>
			<div class="price-left">
				<%= show_plan_name_and_price(@subscription) %>
			</div>
			<div class="shipping-txt-left">
				Free Shipping
			</div>
			<div class="shipping-txt2-left">
				Renews Automatically
			</div>
			<div class="shipping-txt2-left">
				Cancel Anytime
			</div>
		</div>
		<div class="right-bmem">
			<div class="heading-right-bmem">
				Shipping Information
			</div>
			<div class="form-rt">
				<%= f.fields_for :addresses do |builder| %>
					<div class="outer-input">
						<div class="first-input">
							<%= builder.text_field :firstname,:placeholder=>"First Name" %>
						</div>
						<div class="sec-input">
							<%= builder.text_field :lastname,:placeholder=>"Last Name" %>
						</div>
					</div>
					<div class="outer-input">
						<div class="first-input">
							<%= f.text_field :email,:placeholder=>"Email" %>
						</div>
						<div class="sec-input">
							<%= f.password_field :password,:placeholder=>"Password" %>
						</div>
					</div>
					<div class="outer-input">
						<div class="first-input">
							<%= f.password_field :password_confirmation,:placeholder=>"Confirm Password " %>
						</div>
					</div>
					<div class="outer-input">
						<div class="first-input">
							<%= builder.text_field :address1,:placeholder=>"Address 1" %>
						</div>
						<div class="sec-input">
							<%= builder.text_field :address2,:placeholder=>"Address 2" %>
						</div>
					</div>
					<div class="outer-input">
						<div class="first-input">
							<%= builder.text_field :city,:placeholder=>"City" %>
						</div>
						<%@states=CountryStateSelect::Constant::USA_STATES%>

						<div class="sec-input">
							<%= builder.select :state_name,@states,{:prompt => 'State'},:placeholder=>"State"%>
						</div>
					</div>
					<div class="outer-input">
						<div class="first-input">
							<%= builder.text_field :phone,:placeholder=>"Phone No." %>
							<label class="error"> <%= @user.errors.messages[:"addresses.phone"][0] if @user.errors.messages[:"addresses.phone"].present? %> </label>
						</div>
						<div class="sec-input">
							<div class="fourth-input">
								<%= builder.text_field :zipcode,:placeholder=>"Zipcode" %>
							</div>
						</div>
					</div>

					<div class="heading-right-bmem">
						Coupon
					</div>
					<div class="outer-input">
					<div class="fifth-input">
						 <%= f.text_field :coupon_code, placeholder: 'Discount Code' %> 
						 <%=f.hidden_field :sub_type,:value=>@subtype%>
					</div>
						
					</div>
				<% end %>
			</div>
		</div>
		<div class="clr"></div>
	</div>
	<div class="btm-btns" >
		<%if params[:location]%>
			<div class="left-btm-btn"><a href ="#" id="back_to_footer">Back</a></div>
		<%else%>
			<div class="left-btm-btn"><a href="/">Back</a></div>
		<%end%>
		
		<div class="right-btm-btn">
			<a href="#" class ='place-my-order' id ="user_sign_up">Next</a>
		</div>
	</div>
</div>
<script type="text/javascript">
$(function(){
	var email = localStorage.getItem("email");
	if (email != '' && email.length != 0){
		$("#spree_user_email").val(email).attr('readonly', true);
		localStorage.setItem("email","");
 	// alert("text" + localStorage.getItem("email"));
 	}
});
</script>
