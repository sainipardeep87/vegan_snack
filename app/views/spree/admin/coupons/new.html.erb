<%#= render :partial => 'spree/shared/error_messages', :locals => { :target => @coupon } %>
<%= render '/spree/admin/coupons/shared/form' %>


<script type="text/javascript">

var action_name = "<%= params[:action] %>";

$(window).bind("load", function() {
	
	<% if action_name == 'edit' || action_name == 'update' || action_name == 'create' %>

	$('#bt_discount option').each(function(){
		var val = $(this);
		
		if(val.text() == "<%= @coupon.braintree_discount_id%>"){
			console.log(val.text());
			var index = val.val();
			$("#bt_discount").val(index.toString());
		}
	
	});
	
		
	<% end %>
});

</script>