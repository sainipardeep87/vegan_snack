<% content_for :page_title do %>
    <%= Spree.t(:change_password) %>
<% end %>
<%= form_for(spree_current_user, url: "/spree/admin/password", :method => :post) do |f| %>

      <%= f.hidden_field  :id, {value: spree_current_user.id} %>

      <div class="form-group">
        <p>Current Password</p>
        <%= f.password_field  :current_password,  id: :c_password, :class => "form-control"  %>
      </div>

      <div class="form-group">
        <p>New Password</p>
        <%= f.password_field  :password,  id: :n_password, :class => "form-control"  %>
      </div>

      <div class="form-group">
        <p>Confirm Password</p>
        <%= f.password_field  :password_confirmation,  id: :confirm_password, :class => "form-control"  %>
      </div><br />

    <div class="form-group">
      <p><%= f.submit  'Update Password' %></p>
    </div>

<% end %>