<div class="container">
  <div class="row forget-password">

    <% @body_id = 'login' %>
    <div class="password-wrapper" id = "password_form">
      <h6><%= Spree.t(:login_as_existing) %></h6>
      <p>Login to your account.</p>
        <% unless flash[:error].blank? %>
          <div class = "public-error"><%= flash[:error] %></div>
        <% end %>
        <%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
          <div class="form-group">
            <%= f.label :email, Spree.t(:email) %>
            <%= f.email_field :email, :class => 'form-control', :tabindex => 1 %>
          </div>
          <div class="form-group">
            <%= f.label :password, Spree.t(:password) %>
            <%= f.password_field :password, :class => 'form-control', :tabindex => 2 %>
          </div>

          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %>
              <%= Spree.t(:remember_me) %>
            </label>
          </div>

        <p><%= f.submit 'sign_in', :class => 'button primary', :id => 'forgot_password_submit' %></p>
        <% end %>
        <%= link_to Spree.t(:forgot_password), spree.recover_password_path %>

    </div>

  </div>
  </div>
</div>

