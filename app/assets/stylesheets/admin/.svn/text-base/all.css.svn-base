/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *

 *= require admin/spree_backend
 *= require jquery-ui.min

 *= require_self
 *= require_tree .
*/

.banner_image {
  padding-top: 10px;
  padding-bottom: 10px;
}

#admin-menu li{
	font-weight: bold;
}

#coupon_code{
	color: black;
	font-weight: bold;
	font-family: arial;
	font-size: 1.3em;
	width: 100%;
}

#generate_code_btn{
	font-family: arial;
	width: 25%;
	display: block;
	text-align: center;
	font-size: 1.1em;
	background-color: #5498DA;
	color: #FFFFFF;
	text-transform: uppercase;
	font-weight: bold;
	padding: 1% 0% 1% 0%;
	border-radius: 3px;
	margin: 2% 0% 0% 0%;
}

#generate_code_btn:hover{
	background-color: #9FC820;
}


#listing_coupons {
    text-align: center;
}

#listing_coupons tbody tr td.actions{
	display: inline-block;
  	width: 100px;
}

#coupon_fieldset div span.formError {
	display: block;
}

#order_range{
	text-align: center;
	padding: 0% 0% 1% 0%;
}

.order-datepicker{
	background-color: rgba(240, 248, 255, 0.92);
}

.order-datepicker:hover{
	cursor: text;
}

#filter_export{
	text-align: center;
	padding: 2% 0% 0% 0%;
}

.filter-btn {
padding: 1% 0.5% 1% 0.5% !important;
border-radius: 3px;
background-color: rgba(43, 154, 226, 0.83) !important;
text-transform: uppercase;
color: #FFFFFF;
font-weight: bold;
margin: 0% 0.4%;
}

.filter-btn:hover{
	color: #FFFFFF;
	background-color: rgba(43,154,226,1) !important;
}