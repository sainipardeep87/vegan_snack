
/*for note8 Landscape */
@media screen and (min-width: 768px) and (max-width: 1024px) {

}

/* for note 8 portrait  View*/
@media screen and (min-width: 600px) and (max-width: 750px){

    .contact-title{
        margin: 16% 0% 0% 0% !important;
    }
}

/* For  samsung s3 Landscape */
@media screen and (min-width: 600px) and (max-width: 750px) and (orientation : landscape){

    .contact-title{
        margin: 15% 0% 0% 0% !important;
    }

    .contact-title h1 {
        font-family: 'bold-font' !important;
        font-size: 1.7em !important;
    }
    .search{
        margin: -3% 0% 0% 0% !important;
        padding: 0% 0% 0% 0% !important;
    }

    .search-section > input {
        width: 75% !important;
        height: 44px !important;
        margin: 5% 0% 0% 0% !important;
        padding-left: 3% !important;
        font-size: 1.0em !important;
    }
    .row{
        margin: 0% 0% 0% 0%;
    }

    .contact-details h3{
        font-size: 0.8em;
    }

    .contact-details{
        display: none !important;
    }
    .search-section input, button{
        height: 34px !important;
    }
    .search-section input{
        margin: 2% 0% 0% 5% !important;
    }
    .hide-mob-landscape{
        display: none;
    }

    .frequent-questions{
        font-size: 1.0em !important;
        margin-left: 22% !important;
    }
}

/* for Samsung s3 Portrait */
@media screen and (min-width: 320px) and (max-width: 485px){
    .contact-title{
        margin: 24% 0% 0% 0% !important;
    }

    .contact-title h1 {
        font-family: 'bold-font' !important;
        font-size: 1.7em !important;
    }
    .search-section > input {
        width: 75% !important;
        height: 44px !important;
        margin: 5% 0% 0% 0% !important;
        padding-left: 0% !important;
        font-size: 0.7em !important;
    }
    .search-button{
        width: 75px !important;
        margin-top: 0% !important;
        border-left-style: none !important;
        font-size: 1.0em !important;
    }
    .frequent-questions{
        font-size: 0.9em !important;
        text-align: center;
    }
    h5.question-list {
        font-size: 0.9em !important;
    }

    ul.question-listed {
        padding: 0% 0% 0% 0% !important;
        margin: 1% 0% 0% 0% !important;
    }
    .contact-details{
        display: none !important;
    }
    .right-row{
    padding: 0% 0% 0% 5% !important;
    }
    div.row-fluid.contact-page-background.contact-page-block-set {
        height: 100% !important;
        max-height: 500px !important;
    }
}