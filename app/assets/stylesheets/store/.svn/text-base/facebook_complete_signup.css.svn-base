.fb-body{ background-color: #E1E1E1; }

.fb-title{
    margin-top: 6%;
    color: #FF6302;
    font-family: 'bold-font';
    font-size: 3em;
    text-align: center;
    text-transform: uppercase;
    padding: 3% 0% 1% 0% !important;
}

.fb-signup-form input{
    background-color: rgba(255, 255, 255, 0.92);
    border-radius: 5px;
    color: #5B5B59;
    font-family: 'regular-font';
    font-size: 1.15em;
    text-align: left;
}

.fb-signup-form {
    margin-left: 30%;
    text-align: center;
    width: 40%;
}

.fb-signup-div{ width: 70%;}

.fb-signup-form input[type="submit"]{
    background-color: #3AA93D;
    color: #FFFFFF;
    margin-top: 7%;
    text-align: center;
    width: 35%;
}

.fb-signup-form label.error {
    font-size: 0.8em;
    text-align: left !important;
    margin-left: 4%;
}




/* seems samsung s3 Landscape */
@media screen and (min-width: 600px) and (max-width: 750px) and (orientation : landscape){

    .fb-title{
        padding-top: 5% !important;
        font-size: 2.0em;
        padding-bottom: 2% !important;
    }

    .fb-signup-form {
        margin-left: 5%;
        text-align: center;
        width: 84%;
        height: 70%;
    }

    div.fb-signup-form .v-signup-div span input {
        font-size: 0.95em !important;
        padding-top: 10px !important;
        margin-top: 5px;
    }

    div.fb-signup-form .v-signup-div{
        padding-top: 3%;
    }
    .fb-signup-form input[type="submit"] {
        width: 65%;
        margin-bottom: 5%;
    }
}


/* Samsung s3 portrait view */
@media screen and (min-width: 320px) and (max-width: 470px){

    .fb-title{
        padding-top: 20% !important;
        font-size: 2.0em;
        padding-bottom: 5% !important;
    }

    .fb-signup-form {
        margin-left: 5%;
        text-align: center;
        width: 85%;
        height: 70%;
    }

    div.fb-signup-form .v-signup-div span input {
        font-size: 0.95em !important;
        padding-top: 10px !important;
        margin-top: 5px;
    }

    div.fb-signup-form .v-signup-div{
        padding-top: 3%;
    }

    .fb-signup-form input[type="submit"] {
        width: 65%;
    }

}