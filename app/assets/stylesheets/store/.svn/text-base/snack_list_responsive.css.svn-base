/* For  samsung s3 Landscape */
@media screen and (min-width: 600px) and (max-width: 750px) and (orientation : landscape){

    .page-head-title{
        margin: 10% 0% 0% 0% !important;
        font-size: 1.8em;
    }

    .snack-name {
        font-size: 0.8em;
        min-height: 29px;
        width: 100%;
    }

    .all-snacks{
        margin-left: 15%;
    }

    .snack-tab {
        max-width: 117px;
        min-height: 155px;
    }

    .hide-fact-mobile{
        display: none;
    }


    #snack_show_modal {
        height: 230% !important;
    }

    .benfit-button {
        float: right;
    }

    .nutrition-button {
        float: left;
    }
    .benfit-button{
        margin: 0% !important;
        width: 48% !important;
        font-size: 0.9em;
    }
    .horizontal-line{
        border-right: none !important;
    }

    .banana-description{
        word-wrap: break-word;
    }

    .snack-added{
        margin: -4% 0% 0% 0%;
    }

    .queue-button div a {
        font-size: 0.65em;
    }
}

